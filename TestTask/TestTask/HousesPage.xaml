<Page x:Class="TestTask.HousesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestTask"
      mc:Ignorable="d" 
      d:DesignHeight="394.04" d:DesignWidth="790"
      Title="HousesPage">
    <DataGrid Name="HousesDataGrid" 
              IsReadOnly="True"
              MouseDoubleClick="HousesDataGrid_MouseDoubleClick">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID дома" 
                                Binding="{Binding id}"/>
            <DataGridTextColumn Header="Номер дома"  
                                Binding="{Binding number}"/>
            <DataGridTextColumn Header="Количество квартир"  
                                Binding="{Binding count}"/>
            <DataGridTextColumn Header="Общая площадь"  
                                Binding="{Binding square}"
                                Width="*"/>
        </DataGrid.Columns>
    </DataGrid>
</Page>
