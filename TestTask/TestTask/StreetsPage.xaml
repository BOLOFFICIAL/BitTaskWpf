<Page x:Class="TestTask.StreetsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestTask"
      mc:Ignorable="d" 
      d:DesignHeight="394.04" d:DesignWidth="790"
      Title="StreetsPage">
    <DataGrid Name="StreetsDataGrid" 
              IsReadOnly="True"
              MouseDoubleClick="StreetsDataGrid_MouseDoubleClick">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID улицы" 
                                Binding="{Binding id}"/>
            <DataGridTextColumn Header="Название улицы"  
                                Binding="{Binding name}"/>
            <DataGridTextColumn Header="Количество домов"  
                                Binding="{Binding count}"
                                Width="*"/>
        </DataGrid.Columns>
    </DataGrid>
</Page>
