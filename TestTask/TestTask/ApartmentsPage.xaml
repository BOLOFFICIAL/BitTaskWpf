<Page x:Class="TestTask.ApartmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestTask"
      mc:Ignorable="d" 
      d:DesignHeight="394.04" d:DesignWidth="790"
      Title="ApartmentsPage">
    <DataGrid Name="ApartmentsDataGrid" 
              IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID квартиры" 
                                Binding="{Binding id}"/>
            <DataGridTextColumn Header="Площадь квартиры"  
                                Binding="{Binding area}"
                                Width="*"/>
        </DataGrid.Columns>
        
    </DataGrid>
</Page>
